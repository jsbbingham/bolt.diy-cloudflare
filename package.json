{
  "name": "bolt",
  "version": "0.0.7",
  "description": "An AI Agent",
  "private": true,
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "author": {
    "name": "bolt.diy team",
    "email": "maintainers@bolt.diy"
  },
  "homepage": "https://bolt-diy.pages.dev",    // ← adjust to your actual Pages domain
  "scripts": {
    "build":   "remix build",
    "clean":   "node scripts/clean.js",
    "dev":     "node pre-start.cjs && remix dev",
    "start":   "wrangler pages dev . --port 8788",
    "deploy":  "npm run build && wrangler pages publish ./build --project-name bolt-diy",
    "lint":    "eslint --cache --cache-location ./node_modules/.cache/eslint app",
    "lint:fix":"npm run lint -- --fix && prettier --write app",
    "prepare": "husky",
    "test":    "vitest --run",
    "test:watch":"vitest",
    "typecheck":"tsc"
  },
  "engines": {
    "node": ">=18.17.1"
  },
  "dependencies": {
    "@ai-sdk/amazon-bedrock": "1.0.6",
    "@ai-sdk/anthropic": "0.0.39",
    "@ai-sdk/cohere": "1.1.8",
    /* …all your other runtime deps… */
    "@remix-run/cloudflare-pages": "2.15.3",
    "@remix-run/react":           "2.15.3",
    "react":                      "18.3.1",
    /* …etc… */
    "zustand":                    "5.0.3"
  },
  "devDependencies": {
    "@remix-run/dev":         "2.15.3",
    "@remix-run/serve":       "2.15.3",
    "@cloudflare/workers-types": "4.20250204.0",
    "wrangler":               "3.108.0",
    "eslint":                 "8.x",
    "vitest":                 "2.x",
    "typescript":             "5.7.3"
    /* …all your other build-time deps… */
  }
}
